#Include ~/.ssh/config.d/*.conf

Match exec "uname -o |grep Darwin 2>&1 > $null"
    Include ~/.ssh/config.d/mac.host
Match exec "uname -o |grep Msys 2>&1 > $null"
    Include ~/.ssh/config.d/windows.host

Host *
    IgnoreUnknown UseKeychain
    UseKeychain yes
    ServerAliveInterval 30
    ServerAliveCountMax 30
    Compression yes
    ForwardAgent yes
    Protocol 2
    StrictHostKeyChecking accept-new


Host epoxy
    Hostname epoxy.princeton.edu
    Port 22
    include ~/.ssh/config.d/princeton.user
    DynamicForward 2221
